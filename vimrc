set shiftwidth=2
set tabstop=2
set softtabstop=2
set expandtab

set autoindent
set smartindent

colorscheme onedark 
syntax on
set showmatch
" set relativenumber
set number
" set cursorline

" for statusbar plugin
set laststatus=2
let g:lightline = {
  \ 'colorscheme': 'one',
  \ }

